extends ../layouts/page_layout/page.pug

block variables
    - const title = "Отдельная работа";
    - const language = "ru";
    - const pageClass = "single-work-bg";

block content
    .sticky-footer-wrapper
        include ../sections/_admin-panel.pug
        main.single-work-base-content
            .single-work
                +logo("Digital LifeStyle", "Сайт IT специалиста", "logo__subtitle--dark")(class="logo--dark")
            .container
                .row.no-margin
                    .col-11.offset-1
                        .single-work-head
                            .single-work-head-wrapper
                                h1.single-work-head__title Верстка и фронтенд Интернет магазина
                                span.single-work-head__item Емельян Казаков
                                a.single-work-head__item.single-work-head__item--link(href="#!") Работы
                                span.single-work-head__item 16 марта 2019
                            +button("Редактировать", "edit", "default", "link")(class="single-work-head__button")
                        .single-work-content
                            .row.no-margin
                                .col-10.single-work-content__col
                                    img(src="../../img/portfolio/single-work-market.jpg", alt="internet shop")
                                    .row.no-margin.single-work-content__row
                                        .col-6.pl-0
                                            .user-content.single-work__user-content
                                                h3 Кратко о проекте
                                                p Сделана верстка и фронтэнд для интернет магазина мебели. Сверстано более 50-ти страниц. Сделаны все эффекты и интерактив. В работе использованы препроцессоры pug и less. Интерактив написан на JavaScript. Весь проект протестирован на своместимость, начиная с IE9. Для старых браузеров использован подход Graceful Degradation.
                                                .user-content-result
                                                    p Время работы над проектом: 6 недель
                                                    p Страниц сверстано: 52 страницы
                                                    p Бюджет проекта: до 60 000 рублей

                                                h3 Результат
                                                p Проект сделан в срок. Заказчик доволен. Сайт запущен, работает и уже радует покупками посетителей и владельцев бизнеса.
                                        .col-6.pr-0
                                            .user-content
                                                h3 Технологии
                                                ul.technologies-list
                                                    li HTML5, CSS3
                                                    li JavaScript, jQuery
                                                    li LESS, PUG, Gulp, npm, bower
                                                .link-project
                                                    h3 Ссылка на проект
                                                    a(href="#!") http://magnum-store.ru
                                                h3 Код на github
                                                a(href="#!") https://github.com/pozitive/magnumstore/
                                    .single-work-nav
                                        +buttonWithIcon("Все работы", "primary", "link", "#!", "default", {iconPosition: "left", iconClass: "fas fa-arrow-left"})
                                        +buttonWithIcon("Следующая работа", "primary", "link", "#!", "default", {iconPosition: "right", iconClass: "fas fa-arrow-right"})
        include ../sections/_footer.pug