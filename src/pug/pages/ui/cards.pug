extends ../../layouts/ui-layout/ui-layout.pug

block variables
    - const title = 'Карточки - UI-kit и HTML фреймворк - Документация';
    - const pageClass = 'body--dashboard';

block content
    .main-wrapper
        .container.container--left.user-content.pt-35
            h1 Карточки

            .section-ui
                .row
                    .col-6
                        +cards("blog", "Поездка в New York пример длинного названия поста ...", "post-1", "post-1")
                    .col-6
                        +cards("portfolio", "Верстка Landing Page", "portfolio-1", "work preview")
            pre.
                +cards("blog", "Поездка в New York пример длинного названия поста ...", "post-1", "post-1")
                +cards("portfolio", "Верстка Landing Page", "portfolio-1", "work preview")
            
            .title mixins/_cards.pug

            pre.
                mixin cards(type, title, img, altText, link="#")
                    if (type == 'blog')
                        .card.card-blog
                            .card__img-blog
                                img(src=`../img/blog/preview/${img}.jpg`, alt=altText)
                            .card__title.card-blog--indents \#{title}
                            +button("Читать", "primary", "default", link)(class="card--button-size")
                    else if (type=="portfolio")
                        .card.card-work
                            .card__img-work
                                img(src=`../img/portfolio/${img}.jpg`, alt=altText)
                            .card-content
                                .card__title.card-work--indents \#{title}
                                +button("Смотреть кейс", "primary", "default", link)(class="card--button-size")