extends ../../layouts/ui-layout/ui-layout.pug

block variables
    - const titlePage = 'Оставить комментарий - UI-kit и HTML фреймворк - Документация';
    - const pageClass = 'body--dashboard';

block content
    .main-wrapper
        .container.container--left.user-content.pt-35
            h1 Оставить комментарий
            
            .section-ui
                include ../../sections/_leave-comment.pug
            pre.
                include ../sections/_leave-comment.pug
            
            .title sections/_leave-comment.pug

            pre.
                .title-2.title-2--indents Оставить комментарий
                    .leave-comment
                        .leave-comment-wrapper
                            +avatar('avatar-small', 'small')(alt="avatar small")
                            form.leave-comment-form(action="#!")
                                span.leave-comment-form__name Емельян Казаков
                                +notification("Комментарий не может быть пустым.", "error")(class="leave-comment-form__notification")
                                +textarea("comment-box")(class="leave-comment-form__textarea")
                                +button("Опубликовать", "primary", "default", "button")(type="submit")