extends ../../layouts/ui-layout/ui-layout.pug

block variables
    - const title = 'Аватар - UI-kit и HTML фреймворк - Документация';
    - const pageClass = 'body--dashboard';

block content
    .main-wrapper
        .container.container--left.user-content.pt-35
            h1 Аватар
            
            .section-ui
                +avatar('avatar')(alt="Avatar Big")
                +avatar('avatar-small', 'small')(alt="Avatar small")
            pre.
                +avatar('avatar')(alt="Avatar Big")
                +avatar('avatar-small', 'small')(alt="Avatar small")
            
            .title mixins/_avatars.pug

            pre.
                mixin avatar(avatar, modify = '')
                    if (modify == 'small')
                        .avatar(class="avatar--small")
                            img.avatar__img(src=`../img/avatars/${avatar}.jpg`)&attributes(attributes)
                    else
                        .avatar
                            img.avatar__img(src=`../img/avatars/${avatar}.jpg`)&attributes(attributes)