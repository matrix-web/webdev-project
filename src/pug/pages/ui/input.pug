extends ../../layouts/ui-layout/ui-layout.pug

block variables
    - const titlePage = 'Поля ввода - UI-kit и HTML фреймворк - Документация';
    - const pageClass = 'body--dashboard';

block content
    .main-wrapper
        .container.container--left.user-content.pt-35
            h1 Поля ввода
            
            .section-ui
                +inputField("text", "Поле для ввода")(placeholder="Введите имя")
            .section-ui
                +textarea("Сообщение - textarea")
                    | Парк находится в горах Сьерра-Невада на востоке штата Калифорния и занимает огромную даже для Америки площадь, около 3000 кв. км. На этой площади расположены гранитные скальные стены огромной высоты, которыми, собственно, в первую очередь и знаменит парк, водопады, среди которых одни из самых высоких в США, три рощи гигантской секвойи — самого долгоживущего в мире дерева и самого большого по диаметру ствола, а также масса рек, озёр, лесов и лугов. 
            pre.
                +inputField("text", "Поле для ввода", "name-field")(placeholder="Введите имя")
                +textarea("message-box", "Сообщение - textarea")
            
            .title mixins/_input.pug
            pre.
                mixin inputField(typeField="text", labelText = "", labelattr={})
                    if (labelText != "")
                        label.label&attributes(labelattr) \#[span \#{labelText}]
                            input.input(type=typeField)&attributes(attributes)
                    else
                        input.input(id=id type=typeField)&attributes(attributes)
            pre.
                mixin textarea(labelText="", labelattr={})
                    if (labelText != "")
                        label.label&attributes(labelattr) \#[span \#{labelText}]
                            textarea.textarea(cols="30", rows="10" placeholder="Введите сообщение")&attributes(attributes)
                                if (block)
                                    block
                    else
                        textarea.textarea(cols="30", rows="10" placeholder="Введите сообщение")&attributes(attributes)
                            if (block)
                                block